{
	"compilerOptions": {
		"baseUrl": "./",
		"paths": {
			"*": [
				"./src/*"
			]
		},
		"module": "commonjs",
		"noImplicitAny": true,
		"removeComments": false,
		"preserveConstEnums": true,
		"sourceMap": true,
		"emitDecoratorMetadata": false,
		"experimentalDecorators": true,
		"target": "es2017",
		"lib": [
			"es2017"
		],
		"types": [
			"node",
			"lodash"
		]
	},
	"include": [
		"./src/**/*"
	],
	"exclude": [
		"node_modules",
		"**/*.spec.ts"
	]
}