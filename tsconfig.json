{
	"compilerOptions": {
		"module": "commonjs",
		"moduleResolution": "node",
		"noImplicitAny": true,
		"removeComments": false,
		"preserveConstEnums": true,
		"sourceMap": true,
		"emitDecoratorMetadata": false,
		"experimentalDecorators": true,
		"target": "es5",
		"lib": [
			"es5",
			"es2015",
			"es2017"
		],
		"types": [
			"node",
			"lodash"
		]
	},
	"include": [
		"./src/**/*.ts"
	],
	"exclude": [
		"node_modules",
		"**/*.spec.ts"
	]
}